<?xml version="1.0"?>
<psalm
    errorLevel="2"
    resolveFromConfigFile="true"
    findUnusedVariablesAndParams="true"
    findUnusedPsalmSuppress="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    >
<!--
    checkForThrowsInGlobalScope="true"
    findUnusedCode="true"
    findUnusedPsalmSuppress="true"
-->
    <projectFiles>
        <directory name="src/" />
        <directory name="dbmigrations/" />
        <directory name="tests/" />
        <file name ="carddav.php" />
    </projectFiles>

    <extraFiles>
        <directory name="../roundcubemail/program/" />
    </extraFiles>

    <issueHandlers>
        <RedundantConditionGivenDocblockType>
            <errorLevel type="suppress">
                <directory name="tests" /> <!-- all RedundantConditionGivenDocblockType issues in this directory are suppressed -->
            </errorLevel>
        </RedundantConditionGivenDocblockType>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <directory name="tests" /> <!-- all PropertyNotSetInConstructor issues in this directory are suppressed -->
            </errorLevel>
        </PropertyNotSetInConstructor>
    </issueHandlers>
</psalm>

